<?xml version="1.0" encoding="utf-8"?>
<org.centum.techconnect.views.SelfHelpFlowView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/question_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Question"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/details_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/question_textView"
        android:layout_alignLeft="@+id/question_textView"
        android:layout_alignRight="@+id/question_textView"
        android:layout_alignStart="@+id/question_textView"
        android:layout_below="@+id/question_textView"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/attachment_imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/details_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/details_textView"
        android:layout_below="@+id/details_textView"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/options_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_button"
        android:layout_alignEnd="@+id/attachment_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/attachment_imageView"
        android:layout_below="@+id/attachment_imageView"
        android:layout_marginTop="16dp"
        android:fillViewport="false"
        android:minHeight="100dp">

        <LinearLayout
            android:id="@+id/options_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</org.centum.techconnect.views.SelfHelpFlowView>