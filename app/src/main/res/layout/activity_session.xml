<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/model_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_number"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/model_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/serial_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serial_number"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/serial_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/date_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/device_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/device_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/step_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/curr_step"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/step_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notes_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/notes_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="16sp" />

    <Button
        android:id="@+id/resume_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="@string/resume_session"
        android:textColor="?android:attr/colorForegroundInverse"
        android:onClick="resumeSession"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:background= "@android:color/darker_gray"
        android:text="@string/delete_session"
        android:textColor="?android:attr/colorForegroundInverse"
        android:onClick="deleteSession"/>

</LinearLayout>