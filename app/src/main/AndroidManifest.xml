<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.centum.techconnect">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.techconnect.activities.CallActivity"
            android:label="Call Directory" />
        <activity
            android:name="org.techconnect.activities.ImageViewActivity"
            android:label="Image"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name="org.techconnect.activities.IntroTutorial"
            android:label="@string/title_activity_intro_tutorial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.techconnect.activities.PDFActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="org.techconnect.activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="org.techconnect.services.TechConnectService"
            android:exported="false" />

        <activity
            android:name="org.techconnect.activities.LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>